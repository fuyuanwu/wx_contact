/****flex start***/
.flex {
  display: flex;
}

.flex-ver {
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-flow {
  flex-flow: column wrap;
}

.x-center {
  justify-content: center;
  align-items: center;
}

.flex-justify-c-start {
  justify-content: flex-start;
}
.flex-justify-c-end {
  justify-content: flex-end;
}
.flex-justify-c-center {
  justify-content: center;
}
.flex-justify-c-sb {
  justify-content: space-between;
}

.flex-align-i-start {
  align-items: flex-start;
}
.flex-align-i-end {
  align-items: flex-end;
}
.flex-align-i-center {
  align-items: center;
}
.flex-align-i-stretch {
  align-items: stretch;
}

.flex-align-c .flex-align-i-start {
  align-content: flex-start;
}
.flex-align-c-end {
  align-content: flex-end;
}
.flex-align-c-center {
  align-content: center;
}
.flex-align-c-stretch {
  align-content: stretch;
}

.flex-g1 {
  flex-grow: 1;
}

.flex-g2 {
  flex-grow: 2;
}

.flex-g3 {
  flex-grow: 3;
}
/****flex end***/

