/**index.wxss**/
.dev-search {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ccc;
  z-index: 10;
  padding: .55rem;
  display: flex;
  justify-content: center;
}
.dev-search input{
  width: 100%;
  font-size: .7rem;
  background-color: #fff;
  border-radius: .15rem;
  padding: .1rem .5rem;
}
.dev-search .i-add{
  margin-left: .55rem;
}

.content{
  display: block;
  height: 100%;
  width: 100%;
}
.content .top{
  height: 2.74rem;
  line-height: 2.74rem;
}
.index{
  height: 1rem;
  line-height: 1rem;
  background-color: #eee;
  margin-top: -.1rem;
  padding: .15rem 1rem; 
  z-index: 1;
}

.item-warp{
  width: 20rem;
  overflow: hidden;
}

.scroll-view-item {
  overflow: hidden;
  padding-left: 1rem;
  width: 24rem;
  -webkit-transition: all 0.3s linear;
}

.scroll-view-item.active{
  -webkit-transform: translate(-4rem, 0);
}

.scroll-view-item .text{
  float: left;
  padding: .7rem 1rem .7rem 0;
  width: 18rem;
  height: 1.5rem;
  line-height: 1.5rem;
  border-bottom: .1rem solid #ddd;
}
.scroll-view-item .handles {
  width: 4rem;
  display: inline-block;
  padding: .7rem 0;
  height: 1.5rem;
  line-height: 1.5rem;
  background-color: red;
  border-bottom: .1rem solid red;
}
.scroll-view-item .handles .remove{
  padding: 1rem;
  color: #fff;
}
.abc-index{
  position: fixed;
  top: 2.74rem;
  background-color: rgba(255, 255, 255, .6);
  padding-top: 1rem;
  z-index: 9;
  right: 0;
  width: 1rem;
  text-align: center;
}
.abc-index i{
  display: block;
  font-size: .8rem;
  padding: .05rem 0;
  font-weight: bold;
}